<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.kfrak.sdaalarm.MainActivity">

    <TimePicker
        android:id="@+id/main_activity_time_picker"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:numbersBackgroundColor="@android:color/white"
        android:numbersTextColor="@color/colorPrimaryDark">
    </TimePicker>

    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_weight="1" />-->

    <Button
        android:id="@+id/main_alarm_test_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test your alarm"/>

    <Button
        android:id="@+id/main_activity_set_alarm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plan your alarm now!"/>

</LinearLayout>
